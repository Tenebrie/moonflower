{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"strictBindCallApply": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"cli/**/*",
		"src/**/*",
		".eslintrc.js",
		"vite.config.ts",
	]
}